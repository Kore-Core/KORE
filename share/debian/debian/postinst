#!/usr/bin/env bash
# postinst script for kore
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure)

if ! dpkg -s lsb-release >/dev/null 2>&1 ; then
    sudo apt-get install -y lsb-release
fi

OS="$(lsb_release -i | cut -f 2-)"

user_info="$(who)"
user_name="$(cut -d" " -f 1 <<< $user_info)"

# Sets the application icon.

if [ "$OS" == "LinuxMint" ]; then
    DESKTOP_FILE="/usr/share/applications/kore.desktop"
else
    DESKTOP_FILE="/home/$user_name/.local/share/applications/kore.desktop"
fi

cat >> $DESKTOP_FILE << EndOfMessage
[Desktop Entry]
Type=Application
Encoding=UTF-8
Name=Kore
Comment=Kore is a wallet for Kore crypto coins.
Exec=/usr/local/share/kore/kore-qt
Icon=/usr/local/share/kore/kore-qt.png
Categories=GTK;GNOME;Utility;
Terminal=false
EndOfMessage

# Installs and configures Tor Browser.

tar xvf /usr/local/share/kore/torbrowser-setup.tar.xz --directory /usr/local/share/kore/

mv /usr/local/share/kore/tor-browser_* /usr/local/share/kore/tor-browser
mv /usr/local/share/kore/tor-browser/Browser /usr/local/share/kore/
mv /usr/local/share/kore/torbrowser-setup/mozilla.cfg /usr/local/share/kore/Browser/
mv /usr/local/share/kore/torbrowser-setup/user.js /usr/local/share/kore/Browser/TorBrowser/Data/Browser/profile.default
mv /usr/local/share/kore/torbrowser-setup/local-settings.js /usr/local/share/kore/Browser/defaults/pref
rm -f /usr/local/share/kore/torbrowser-setup.tar.xz
rm -rf /usr/local/share/kore/tor-browser
rm -rf /usr/local/share/kore/torbrowser-setup

# Fixes Tor Browser permission error.

sudo chown $user_name -R /usr/local/share/kore

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
