
{
    "version": "2.0.0",
    "command": "make",
    "tasks": [
        {
            "type": "shell",
            "label": "Makefile",

            // Make this the default build command.
            "group": {
                "kind": "build",
                "isDefault": true
            },
            
            // Show the output window only if unrecognized errors occur.
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },

            // No args
            "args": ["-j3","all"],

            // Use the standard less compilation problem matcher.
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ]
}