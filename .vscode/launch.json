    "version": "0.2.0",
    "configurations": [
        { 
            "name": "Attach to kored",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/src/kored",
            "processId": "111916",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}